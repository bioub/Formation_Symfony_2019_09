{% extends "base.html.twig" %}

{% block title %}Afficher un contact{% endblock %}

{% block body %}
    <h2>Afficher un contact</h2>

    <p>Prénom : {{ contact.prenom }}</p>
    <p>Nom : {{ contact.nom }}</p>

    {% if contact.city %}
        <p>Ville : {{ contact.city }}</p>
    {% endif %}

    {% if contact.societe %}
        <p>Société : {{ contact.societe.name }}</p>
    {% endif %}
{% endblock %}
